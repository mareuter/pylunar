{
    "enabled": true,
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:best-practices",
      ":rebaseStalePrs"
    ],
    "packageRules": [
      {
        "description": "Automerge non-major updates",
        "matchUpdateTypes": [
          "minor",
          "patch"
        ],
        "automerge": true
      }
    ],
    "timezone": "America/Phoenix",
    "schedule": [
      "on the 26th day of the month before 8am"
    ]
}